{
  "schema": {
    "select": [
      {
        "type": "text",
        "placeholder": "Dream house",
        "disable": false,
        "name": "title",
        "label": "Title",
        "required": true
      },
      {
        "type": "number",
        "placeholder": "1000",
        "disable": false,
        "name": "totalAmount",
        "label": "Amount",
        "required": true
      },
      {
        "type": "number",
        "placeholder": "1000",
        "disable": false,
        "require": false,
        "name": "currentAmount",
        "required": true,
        "label": "Current amount"
      },
      {
        "type": "number",
        "placeholder": "yyyy",
        "disable": false,
        "require": true,
        "name": "endYear",
        "required": true,
        "label": "End year"
      }
    ],
    "button": [
      {
        "type": "submit"
      }
    ]
  },
  "rules": {
    "title": "Saving",
    "description": "Create/update saving",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "required": true
      },
      "totalAmount": {
        "type": "number",
        "moreThan": 9,
        "required": true
      },
      "endYear": {
        "type": "date",
        "required": true
      },
      "currentAmount": {
        "type": "number",
        "moreThan": 9,
        "lessThan": 1000000,
        "required": false
      }
    }
  },
  "config": {
    "errMessages": {
      "title": {
        "required": "Required"
      },
      "totalAmount": {
        "required": "Required",
        "moreThan": "Minimum 10"
      },
      "currentTotal": {
        "moreThan": "Minimum 10",
        "lessThan": "Maximum 999999"
      },
      "endYear": {
        "required": "Required",
        "typeError": "Invalid date"
      }
    }
  }
}
