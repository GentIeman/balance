{
  "schema": {
    "select": [
      {
        "type": "email",
        "placeholder": "Category",
        "disable": false,
        "name": "categories",
        "label": "Category",
        "optionAttribute": "title",
        "valueAttribute": "id",
        "isSearchable": true,
        "searchPlaceholder": "Category",
        "required": true
      }
    ],
    "input": [
      {
        "type": "number",
        "placeholder": "1000",
        "disable": false,
        "require": true,
        "name": "amount",
        "required": true,
        "label": "Amount",
        "min": 1,
        "max": 999999
      }
    ],
    "button": [
      {
        "type": "submit"
      }
    ]
  },
  "rules": {
    "title": "Expense",
    "description": "Create/update expense",
    "type": "object",
    "properties": {
      "categories": {
        "type": "string",
        "required": true
      },
      "amount": {
        "type": "number",
        "min": 8,
        "required": true
      }
    }
  },
  "config": {
    "errMessages": {
      "categories": {
        "required": "Required"
      },
      "amount": {
        "required": "Required",
        "min": "Must be at least 8 characters"
      }
    }
  }
}
